<section>
<div class="chatblock">
    <div class="box">
        <h2>User Profile Accounts</h2>

        <div class="profile-form">


            {{#each user}}

            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" name="name" value="{{name}}" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" value="{{email}}" required>
            </div>
            
            <div class="form-group">
                <label for="favoritebook">Favorite book:</label>
                <input type="text" name="favoritebook" value="{{favoritebook}}" required>
            </div>
            
            <div class="form-group">
                <label for="favoritegenre">Favorite genre:</label>
                <input type="text" name="favoritegenre" value="{{favoritegenre}}" required>
            </div>

            <form action="/edituser/{{id}}" method="GET">
            
            <button type="submit">Edit Profile</button>

            </form>

            <form action="/deleteuser/{{id}}" method="POST">

                <button type="submit">Delete User</button>

            </form>

            {{else}}

            <p>No users found.</p>

            {{/each}}

            </div>

    </div>
</div>
</section>
